<domain type='kvm'>
    <name>cloud-test</name>
    <memory unit='KiB'>2097152</memory>
    <os>
        <type>hvm</type>
        <boot dev="hd" />
    </os>
    <features>
        <acpi/>
    </features>
    <vcpu>1</vcpu>
    <devices>
        <interface type='bridge'>
            <source bridge='virbr0'/>
            <model type='virtio'/>
        </interface>
        <disk type='file' device='disk'>
            <driver type='qcow2' cache='none'/>
	    <source file='/home/sherlock/kvm/images/centos-cloud.qcow2'/>
            <target dev='vda' bus='virtio'/>
        </disk>
        <disk type='file' device='disk'>
	    <source file='/home/sherlock/kvm/images/cloud-init.img'/>
            <target dev='vdb' bus='virtio'/>
        </disk>
        <console type="pty">
           <target type="serial" port="1"/>
        </console>
    </devices>
</domain>